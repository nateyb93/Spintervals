<Page
    x:Class="Spintervals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spintervals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="Images/drones.jpg" Stretch="UniformToFill" Opacity=".3"/>
    </Page.Background>
    <Page.Resources>
        <Style TargetType="TextBlock" x:Name="TitleFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style.Setters>
        </Style> 
        
        <Style TargetType="TextBlock" x:Name="SongTitleFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="42"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="SongArtistFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Foreground" Value="Gray"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="SongAlbumFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Foreground" Value="Gray"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="IntervalListFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
            </Style.Setters>
        </Style>
    </Page.Resources>
    <Pivot>
        <PivotItem Header="edit track">
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" Grid.ColumnSpan="2" Margin="5,10,5,10">
                    <ListBox x:ConnectionId='6' Name="IntervalListView" Background="Transparent"                                                      >
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:ConnectionId='7'                                   >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock HorizontalAlignment="Stretch" Text="{Binding SongPositionString}" Foreground="White" Style="{StaticResource IntervalListFont}" Grid.Column="0"/>
                                    <TextBlock HorizontalAlignment="Stretch" Text="{Binding IntervalName}" Style="{StaticResource IntervalListFont}" Grid.Column="1" TextAlignment="Right">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{Binding Color}" />
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>

                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <Button x:ConnectionId='1' Name="AddIntervalButton" Content="+ Add Interval" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,10,10" Height="40"                                >
                    <Button.Flyout>
                        <Flyout x:Name="FlyoutNewInterval">
                            <local:NewIntervalDialog x:Name="DialogNewInterval"/>
                        </Flyout>
                    </Button.Flyout>
                </Button>


                <MediaElement x:ConnectionId='2' AudioCategory="BackgroundCapableMedia" Name="songMediaElement" Grid.Row="2" AutoPlay="False"                                                                                    />
                <Grid Grid.Row="2" Margin="25,0" VerticalAlignment="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Canvas x:ConnectionId='4' Grid.ColumnSpan="3" Grid.Row="0"  Name="IntervalCanvas"                                          Height="100"/>
                    <Slider x:ConnectionId='5' Name="timelineSlider" Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource MusicSlider}"                                            FontFamily="Global User Interface" VerticalAlignment="Center"/>
                    <TextBlock Text="0:00" Grid.Row="1" Grid.Column="0" Name="PositionTextBlock" VerticalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Psycho by Muse" Grid.Row="1" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" Margin="0,25,0,0" FontFamily="Segoe WP" FontWeight="Thin"/>
                    <TextBlock Text="3:33" Grid.Row="1" Grid.Column="2" TextAlignment="Right" Name="DurationTextBlock" VerticalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>

                <Grid Grid.Row="4" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button HorizontalAlignment="Center" Grid.Column="0" Style="{StaticResource ButtonStyle1}" Width="55" Height="55">
                        <Image Source="Images/rew.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:ConnectionId='3' HorizontalAlignment="Center" Grid.Column="1" Style="{StaticResource ButtonStyle1}" Width="55" Height="55" Name="PlayButton"                         >
                        <Image Source="Images/play.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                    </Button>
                    <Button HorizontalAlignment="Center" Grid.Column="2" Style="{StaticResource ButtonStyle1}" Width="55" Height="55">
                        <Image Source="Images/ff.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                    </Button>
                </Grid>
            </Grid>
        </PivotItem>
        
    </Pivot>
    
    
</Page>

