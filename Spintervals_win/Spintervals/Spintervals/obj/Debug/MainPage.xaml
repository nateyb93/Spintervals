<Page
    x:Class="Spintervals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spintervals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="Images/drones.jpg" Stretch="UniformToFill" Opacity=".3"/>
    </Page.Background>
    <Page.Resources>
        <Style TargetType="TextBlock" x:Name="TitleFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="SongTitleFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="42"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="SongArtistFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Foreground" Value="Gray"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="SongAlbumFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Foreground" Value="Gray"/>
            </Style.Setters>
        </Style>
        <Style TargetType="TextBlock" x:Name="IntervalListFont">
            <Style.Setters>
                <Setter Property="FontWeight" Value="Thin"/>
                <Setter Property="FontFamily" Value="Segoe WP"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
            </Style.Setters>
        </Style>
    </Page.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="edit track" FontSize="72" Style="{StaticResource TitleFont}" Grid.Row="0" Margin="0,0,0,20"/>
            
        
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="5,10,5,10">
            <ListBox Name="IntervalListView" Background="Transparent">
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Interval 1" Foreground="White" Style="{StaticResource IntervalListFont}" Grid.Column="0"/>
                        <TextBlock Text="Climb" Foreground="White" Style="{StaticResource IntervalListFont}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Interval 2" Foreground="Red" Style="{StaticResource IntervalListFont}" Grid.Column="0"/>
                        <TextBlock Text="Sprint" Foreground="Red" Style="{StaticResource IntervalListFont}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Interval 3" Foreground="Lime" Style="{StaticResource IntervalListFont}" Grid.Column="0"/>
                        <TextBlock Text="Standing Climb" Foreground="Lime" Style="{StaticResource IntervalListFont}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Interval 4" Foreground="Blue" Style="{StaticResource IntervalListFont}" Grid.Column="0"/>
                        <TextBlock Text="Rest" Foreground="Blue" Style="{StaticResource IntervalListFont}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem HorizontalContentAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Interval 5" Foreground="Yellow" Style="{StaticResource IntervalListFont}" Grid.Column="0"/>
                        <TextBlock Text="Climb" Foreground="Yellow" Style="{StaticResource IntervalListFont}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
            </ListBox>
        </ScrollViewer>

        <Button Name="AddIntervalButton" Content="+ Add Interval" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,10,10"/>


        <MediaElement x:ConnectionId='1' Source="Assets/Muse - Psycho.mp3" AudioCategory="BackgroundCapableMedia" Name="songMediaElement" Grid.Row="2" AutoPlay="False"                                           />
        <Grid Grid.Row="3" Margin="25,0" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Canvas x:ConnectionId='3' Grid.ColumnSpan="3" Grid.Row="0"  Name="IntervalCanvas"                                          Height="100"/>
            <Slider x:ConnectionId='4' Name="timelineSlider" Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource MusicSlider}"                                            FontFamily="Global User Interface" VerticalAlignment="Center"/>
            <TextBlock Text="0:00" Grid.Row="1" Grid.Column="0" Name="PositionTextBlock" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock Text="Psycho by Muse" Grid.Row="1" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" Margin="0,25,0,0" FontFamily="Segoe WP" FontWeight="Thin"/>
            <TextBlock Text="3:33" Grid.Row="1" Grid.Column="2" TextAlignment="Right" Name="DurationTextBlock" VerticalAlignment="Center" Margin="0,10,0,0"/>
        </Grid>
        
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button HorizontalAlignment="Center" Grid.Column="0" Style="{StaticResource ButtonStyle1}" Width="55" Height="55">
                <Image Source="Images/rew.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
            </Button>
            <Button x:ConnectionId='2' HorizontalAlignment="Center" Grid.Column="1" Style="{StaticResource ButtonStyle1}" Width="55" Height="55" Name="PlayButton"                         >
                <Image Source="Images/play.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
            </Button>
            <Button HorizontalAlignment="Center" Grid.Column="2" Style="{StaticResource ButtonStyle1}" Width="55" Height="55">
                <Image Source="Images/ff.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
</Page>

