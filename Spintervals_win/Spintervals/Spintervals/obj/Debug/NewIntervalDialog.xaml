<UserControl
    x:Class="Spintervals.NewIntervalDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spintervals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    MinHeight="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Name="TitleText">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe WP"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="New Interval" Style="{StaticResource TitleText}"/>
        <TextBox Grid.Row="1" PlaceholderText="Interval name" VerticalAlignment="Center" Margin="0,5" Name="IntervalNameTextBox"/>
        <ComboBox Grid.Row="2" VerticalAlignment="Center" Margin="0,5" Name="ColorComboBox" SelectedIndex="0">
            <ComboBoxItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" Width="15" Height="15" HorizontalAlignment="Left" Fill="White" Stroke="Black" StrokeThickness="2"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Text="White"/>
                </Grid>
                
            </ComboBoxItem>
            <ComboBoxItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" Width="15" Height="15" HorizontalAlignment="Left" Fill="Red"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Text="Red"/>
                </Grid>
            </ComboBoxItem>
            <ComboBoxItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" Width="15" Height="15" HorizontalAlignment="Left" Fill="Lime"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Text="Green"/>
                </Grid>
            </ComboBoxItem>
            <ComboBoxItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" Width="15" Height="15" HorizontalAlignment="Left" Fill="Blue"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Text="Blue"/>
                </Grid>
            </ComboBoxItem>
            <ComboBoxItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0" Width="15" Height="15" HorizontalAlignment="Left" Fill="Yellow"/>
                    <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Text="Yellow"/>
                </Grid>
            </ComboBoxItem>
        </ComboBox>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Slider x:ConnectionId='1' Grid.Column="0" Name="IntensitySlider" Minimum="1" Maximum="20" SnapsTo="StepValues"                                            />
            <TextBlock Grid.Column="1" Name="IntensityTextBlock" Text="Intensity: " FontSize="20" FontFamily="Segoe WP" FontWeight="Light" VerticalAlignment="Center" Margin="15,-15,0,0"/>
        </Grid>
        
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,5,0" Content="save" Name="SaveButton" Height="40"/>
            <Button Grid.Column="1" HorizontalAlignment="Stretch" Margin="5,0,0,0" Content="cancel" Name="CancelButton" Height="40"/>
        </Grid>
    </Grid>
</UserControl>

